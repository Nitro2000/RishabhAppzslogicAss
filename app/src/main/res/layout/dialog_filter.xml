<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="36dp"
            android:background="@drawable/bg_corner_grey_10"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:padding="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/filterTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter List By"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RadioGroup
                android:id="@+id/filterRadGr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16"
                app:layout_constraintTop_toBottomOf="@id/filterTxt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <RadioButton
                    android:id="@+id/titleRadB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title"
                    android:textFontWeight="500"
                    android:layout_weight="1"
                    android:checked="true"
                    android:textSize="@dimen/text_14"/>

                <RadioButton
                    android:id="@+id/dateRadB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/released_date"
                    android:textFontWeight="500"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_14"/>

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/applyFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="15dp"
                android:text="Apply Filter"
                android:textAllCaps="false"
                android:paddingHorizontal="60dp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/space_16"
                android:background="@drawable/bg_corner_white_10"
                android:backgroundTint="@color/primary_violet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/filterRadGr" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>